# --- OCR / Chunking ---
OCR_ENGINE_NAME=rapidocr         # rapidocr | deepseek | tesseract
OCR_ENDPOINT=http://127.0.0.1:9999/ocr
OCR_MODE_DEFAULT=auto
CHUNK_SIZE=3000
CHUNK_OVERLAP=150
EMIT_MULTI_DEFAULT=false
NORMALIZE_OCR=true


# --- PDF thresholds ---
PDF_TEXT_THRESHOLD=50

# --- LÃ­mites de datos tabulares ---
CSV_MAX_ROWS=2000
XLSX_MAX_ROWS=2000
XLSX_MAX_SHEETS=3

# --- Modo opcional de vista previa ---
TABLE_MODE=preview
PREVIEW_ROWS=200
